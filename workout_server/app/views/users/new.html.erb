<div class="sign group">
  <div class="sign-form">
    <form class="sign-form-fields" action="/users" method="post">
      <%= auth_token %>
      <label> Username
        <input type="text" class="form-control" name="user[username]" value="<%= @user.username %>">
      </label>
      <br>
      <label> Email
        <input type="text" class="form-control" name="user[email]" value="<%= @user.email %>">
      </label>
      <br>
      <label> Password
        <input type="password" class="form-control" name="user[password]" value="">
      </label>
      <br>
      <label> Password Confirmation
        <input type="password" class="form-control" name="user[password_confirm]" value="">
      </label>
      <br>
      <input class="form-control sign-submit" type="submit" value="Sign Up!">
    </form>
  </div>
</div>
