

<div class="sign group">
    <div class="sign-form">

      <form class="sign-form-fields" action="/session" method="post">
        <%= auth_token %>
        <label> Username
          <input type="text" class="form-control" name="user[username]" value="">
        </label>
        <br>
        <label> Password
          <input type="password" class="form-control" name="user[password]" value="">
        </label>
        <br>
        <input type="submit" class="form-control sign-submit" value="Sign In!">
      </form>
    </div>

</div>
